{
  "name": "glp1-rag-assistant",
  "displayName": "GLP1 RAG Assistant",
  "description": "Assistant IA sp√©cialis√© GLP1 int√©gr√© dans VS Code",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "icon": "icon.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:glp1-rag.ask",
    "onCommand:glp1-rag.generateCode",
    "onCommand:glp1-rag.optimizeSEO",
    "onCommand:glp1-rag.createContent"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "glp1-rag.ask",
        "title": "ü§ñ Poser une Question RAG",
        "category": "GLP1"
      },
      {
        "command": "glp1-rag.generateCode",
        "title": "üíª G√©n√©rer du Code",
        "category": "GLP1"
      },
      {
        "command": "glp1-rag.optimizeSEO",
        "title": "üéØ Optimiser SEO",
        "category": "GLP1"
      },
      {
        "command": "glp1-rag.createContent",
        "title": "üìù Cr√©er du Contenu",
        "category": "GLP1"
      },
      {
        "command": "glp1-rag.openPanel",
        "title": "üöÄ Ouvrir Assistant GLP1",
        "category": "GLP1"
      }
    ],
    "keybindings": [
      {
        "command": "glp1-rag.ask",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g"
      },
      {
        "command": "glp1-rag.generateCode",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "glp1-rag.ask",
          "group": "glp1"
        },
        {
          "command": "glp1-rag.generateCode",
          "group": "glp1"
        }
      ],
      "commandPalette": [
        {
          "command": "glp1-rag.ask"
        },
        {
          "command": "glp1-rag.generateCode"
        },
        {
          "command": "glp1-rag.optimizeSEO"
        },
        {
          "command": "glp1-rag.createContent"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "glp1RagView",
          "name": "ü§ñ GLP1 RAG Assistant",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "glp1-rag",
          "title": "GLP1 RAG",
          "icon": "$(robot)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.4.0"
  }
}
