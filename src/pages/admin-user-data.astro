      notification.textContent = '‚úÖ Export CSV t√©l√©charg√©';
      document.body.appendChild(notification);
      
      setTimeout(() => {
        notification.remove();
      }, 3000);
      
    } catch (error) {
      console.error('Erreur export:', error);
      showError('Erreur lors de l\'export');
    }
  }

  function generateReport() {
