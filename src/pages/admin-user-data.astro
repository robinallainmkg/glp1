let users = [];
let error = null;

try {
  const response = await fetch(`${Astro.url.origin}/api/user-management?action=users`);
  if (response.ok) {
    const data = await response.json();
    users = data.users || [];
  } else {
    error = 'Erreur lors du chargement des donnÃ©es';
  }
} catch (err) {
  error = `Erreur de connexion: ${err.message}`;
}

// Statistiques rapides
const totalUsers = users.length;
const newsletterSubscribers = users.filter(user => user.isNewsletterSubscriber).length;
const recentUsers = users.filter(user => {
  const userDate = new Date(user.lastSeen);
  const oneWeekAgo = new Date(Date.now() - 7 * 24 * 60 * 60 * 1000);
  return userDate > oneWeekAgo;
}).length;
