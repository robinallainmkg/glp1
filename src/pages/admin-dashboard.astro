    openModal('‚úèÔ∏è Modifier Article', content);
    
    const saveBtn = document.getElementById('modal-save-btn');
    if (saveBtn) {
      saveBtn.onclick = () => {
        console.log('Modification article:', collection, slug);
        alert('Article modifi√© ! (Backend √† impl√©menter)');
        closeModal();
      };
    }
  }

  function viewArticle(url) {
    window.open(url, '_blank');
  }

  function deleteArticle(collection, slug) {
    if (confirm(`√ätes-vous s√ªr de vouloir supprimer l'article "${slug}" ?`)) {
