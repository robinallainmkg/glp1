  /* Modal am√©lior√© */
  .modal {
    background: white;
    border-radius: 1.5rem;
    width: 90vw;
    max-width: 700px;
    max-height: 85vh;
    overflow: hidden;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
