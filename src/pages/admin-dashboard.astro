  function editArticle(collection, slug) {
    const content = `
      <div class="form-group">
        <label>Titre:</label>
        <input type="text" id="edit-article-title" value="Article ${slug}" class="form-input">
      </div>
      <div class="form-group">
        <label>Slug:</label>
        <input type="text" value="${slug}" class="form-input" readonly>
