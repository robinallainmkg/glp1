---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import ArticleCard from '../../../components/ArticleCard.astro';
import { getCollection } from 'astro:content';

// Récupérer tous les articles de cette collection
const articles = await getCollection('glp1-perte-de-poids');

// Configuration des couleurs
const colors = {
  bg: 'emerald',
  text: 'emerald-800',
  badge: 'emerald-100'
};
---

<BaseLayout 
  title="Perte de Poids - Guide complet des GLP-1"
  description="Utilisation des GLP-1 pour la perte de poids et l'obésité"
  keywords="glp1 perte-de-poids, glp1, perte de poids"
>

<div class="container">
  <div class="max-w-6xl mx-auto">
    
    <!-- Hero Section -->
    <div class="bg-gradient-to-r from-emerald-600 to-emerald-700 text-white rounded-2xl p-8 mb-8">
      <div class="flex items-center gap-4 mb-4">
        <div class="text-4xl">⚖️</div>
        <h1 class="text-4xl font-bold">Perte de Poids</h1>
      </div>
      <p class="text-xl opacity-90 mb-4">
        Utilisation des GLP-1 pour la perte de poids et l'obésité
      </p>
      <div class="bg-white/20 rounded-lg p-4 inline-block">
        <span class="font-semibold">{articles.length} articles disponibles</span>
      </div>
    </div>

    <!-- Articles Section -->
    <section class="collection-articles">
      <div class="mb-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Perte de Poids</h2>
        <p class="text-lg text-gray-600">
          Utilisation des GLP-1 pour la perte de poids et l'obésité
        </p>
      </div>
      
      <!-- Grille des articles avec images -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {articles.map((article) => (
          <ArticleCard 
            article={article}
            collection="glp1-perte-de-poids"
            categoryName="Perte de Poids"
            colors={colors}
          />
        ))}
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-12 bg-gradient-to-r from-emerald-50 to-emerald-100 rounded-2xl mt-12">
      <div class="text-center px-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">
          Besoin d'informations personnalisées ?
        </h2>
        <p class="text-lg text-gray-700 mb-8">
          Consultez notre guide complet et téléchargez nos ressources gratuites.
        </p>
        <a 
          href="/guide-beaute-perte-de-poids-glp1/" 
          class="inline-flex items-center px-8 py-4 bg-emerald-600 text-white font-bold rounded-xl hover:bg-emerald-700 transition-all duration-300 transform hover:scale-105 shadow-xl"
        >
          <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          Télécharger le guide gratuit
        </a>
      </div>
    </section>
  </div>
</div>

</BaseLayout>