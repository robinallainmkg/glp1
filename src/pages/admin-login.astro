<style>
/* Styles pour la page de connexion admin moderne */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

.container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url("data:image/svg+xml,%3Csvg width='40' height='40' viewBox='0 0 40 40' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='%23ffffff' fill-opacity='0.03'%3E%3Cpath d='M0 0h40v40H0V0zm10 10h20v20H10V10z'/%3E%3C/g%3E%3C/svg%3E") repeat;
  pointer-events: none;
}

/* Header Admin Moderne */
.admin-header {
  position: sticky;
  top: 0;
  z-index: 10;
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(20px);
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  padding: var(--spacing-6) var(--spacing-8);
  display: flex;
  align-items: center;
  justify-content: space-between;
  animation: slideDown 0.8s ease-out;
}

.admin-logo {
  display: flex;
  align-items: center;
  gap: var(--spacing-4);
}

.logo-icon {
  width: 48px;
  height: 48px;
  background: linear-gradient(135deg, #ffffff, #f0f9ff);
  border-radius: var(--radius-lg);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
  box-shadow: 0 4px 20px rgba(255, 255, 255, 0.1);
  animation: glow 2s ease-in-out infinite alternate;
}

.logo-text h1 {
  color: white;
  font-size: var(--font-size-xl);
  font-weight: 700;
  margin: 0;
  text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
}

.logo-subtitle {
  color: rgba(255, 255, 255, 0.8);
  font-size: var(--font-size-sm);
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.admin-meta {
  display: flex;
  align-items: center;
  gap: var(--spacing-4);
}

.system-status {
  display: flex;
  align-items: center;
  gap: var(--spacing-2);
  background: rgba(255, 255, 255, 0.1);
  padding: var(--spacing-2) var(--spacing-4);
  border-radius: var(--radius-full);
  color: white;
  font-size: var(--font-size-sm);
  backdrop-filter: blur(10px);
}

.status-indicator {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: #22c55e;
  box-shadow: 0 0 10px #22c55e;
  animation: pulse 2s infinite;
}

/* Container de connexion */
.login-container {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-8);
  position: relative;
  z-index: 2;
}

.login-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: var(--radius-2xl);
  padding: var(--spacing-12);
  width: 100%;
  max-width: 480px;
  box-shadow: 
    0 20px 40px rgba(0, 0, 0, 0.1),
    0 0 0 1px rgba(255, 255, 255, 0.2);
  animation: slideUp 0.8s ease-out;
  position: relative;
  overflow: hidden;
}

.login-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(90deg, #667eea, #764ba2, #667eea);
  background-size: 200% 100%;
  animation: shimmer 3s ease-in-out infinite;
}

.login-header {
  text-align: center;
  margin-bottom: var(--spacing-8);
}

.login-icon {
  width: 64px;
  height: 64px;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: var(--radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28px;
  margin: 0 auto var(--spacing-4);
  box-shadow: 0 8px 32px rgba(102, 126, 234, 0.3);
  animation: float 3s ease-in-out infinite;
}

.login-header h2 {
  color: var(--gray-900);
  font-size: var(--font-size-2xl);
  font-weight: 700;
  margin: 0 0 var(--spacing-2);
}

.login-subtitle {
  color: var(--gray-600);
  font-size: var(--font-size-base);
  margin: 0;
}

/* Formulaire */
.login-form {
  margin-bottom: var(--spacing-6);
}

.form-group {
  margin-bottom: var(--spacing-6);
}

.form-group label {
  display: flex;
  align-items: center;
  gap: var(--spacing-2);
  color: var(--gray-700);
  font-weight: 600;
  margin-bottom: var(--spacing-2);
  font-size: var(--font-size-sm);
}

.label-icon {
  font-size: 16px;
}

.input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
}

.input-wrapper input {
  width: 100%;
  padding: var(--spacing-4) var(--spacing-6);
  padding-right: var(--spacing-12);
  border: 2px solid var(--gray-200);
  border-radius: var(--radius-lg);
  font-size: var(--font-size-base);
  background: white;
  transition: all 0.3s ease;
}

.input-wrapper input:focus {
  outline: none;
  border-color: #667eea;
  box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
  transform: translateY(-2px);
}

.show-password {
  position: absolute;
  right: var(--spacing-4);
  background: none;
  border: none;
  font-size: 18px;
  cursor: pointer;
  padding: var(--spacing-2);
  border-radius: var(--radius-sm);
  transition: all 0.2s ease;
}

.show-password:hover {
  background: var(--gray-100);
  transform: scale(1.1);
}

.login-btn {
  width: 100%;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border: none;
  padding: var(--spacing-4) var(--spacing-6);
  border-radius: var(--radius-lg);
  font-size: var(--font-size-base);
  font-weight: 600;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-2);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.login-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
}

.login-btn:active {
  transform: translateY(0);
}

.login-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s ease;
}

.login-btn:hover::before {
  left: 100%;
}

.btn-icon {
  font-size: 18px;
  animation: bounce 2s infinite;
}

/* Messages d'erreur */
.error-message {
  background: #fee2e2;
  color: #dc2626;
  padding: var(--spacing-4);
  border-radius: var(--radius-lg);
  margin-bottom: var(--spacing-4);
  border: 1px solid #fecaca;
  font-size: var(--font-size-sm);
  display: flex;
  align-items: center;
  gap: var(--spacing-2);
}

/* Informations de connexion */
.login-info {
  background: var(--gray-50);
  padding: var(--spacing-4);
  border-radius: var(--radius-lg);
  border: 1px solid var(--gray-200);
  font-size: var(--font-size-sm);
}

.login-info p {
  margin: 0 0 var(--spacing-2);
  color: var(--gray-600);
}

.login-info p:last-child {
  margin-bottom: 0;
}

.login-info code {
  background: var(--gray-100);
  padding: var(--spacing-1);
  border-radius: var(--radius-sm);
  font-family: monospace;
}

/* Animations */
@keyframes slideDown {
  from {
    transform: translateY(-100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    transform: translateY(50px);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10px);
  }
}

@keyframes glow {
  from {
    box-shadow: 0 4px 20px rgba(255, 255, 255, 0.1);
  }
  to {
    box-shadow: 0 4px 30px rgba(255, 255, 255, 0.2);
  }
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.6;
  }
}

@keyframes shimmer {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-3px);
  }
  60% {
    transform: translateY(-1px);
  }
}

/* Responsive */
@media (max-width: 768px) {
  .admin-header {
    padding: var(--spacing-4);
    flex-direction: column;
    gap: var(--spacing-4);
    text-align: center;
  }

  .login-container {
    padding: var(--spacing-4);
  }

  .login-card {
    padding: var(--spacing-8);
  }

  .admin-logo {
    flex-direction: column;
    gap: var(--spacing-2);
  }

  .logo-text h1 {
    font-size: var(--font-size-lg);
  }
}
</style>

<script>
// Authentification simple et fonctionnalit√©s modernes
document.addEventListener('DOMContentLoaded', function() {
  const form = document.getElementById('loginForm');
  const passwordInput = document.getElementById('password');
  const togglePassword = document.getElementById('togglePassword');
  const errorDisplay = document.getElementById('errorDisplay');
  const errorText = document.getElementById('errorText');
  
  // V√©rifier si d√©j√† connect√©
  if (localStorage.getItem('glp1_admin_auth') === 'true') {
    window.location.href = '/admin/';
  }
  
  // Toggle visibilit√© mot de passe
  togglePassword.addEventListener('click', function() {
    const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
    passwordInput.setAttribute('type', type);
    togglePassword.textContent = type === 'password' ? 'üëÅÔ∏è' : 'üôà';
  });
  
  // Gestion du formulaire
  form.addEventListener('submit', function(e) {
    e.preventDefault();
    
    const password = passwordInput.value;
    
    // Mot de passe simple pour la d√©mo
    if (password === 'glp1admin2024') {
      // Stocker l'√©tat d'authentification
      localStorage.setItem('glp1_admin_auth', 'true');
      localStorage.setItem('glp1_admin_login_time', new Date().toISOString());
      
      // Animation de succ√®s
      const button = form.querySelector('.login-btn');
      button.style.background = 'linear-gradient(135deg, #22c55e, #16a34a)';
      button.innerHTML = '‚úÖ Connexion r√©ussie...';
      
      // Redirection apr√®s une courte pause
      setTimeout(() => {
        window.location.href = '/admin/';
      }, 1500);
      
    } else {
      // Afficher l'erreur avec animation
      errorText.textContent = 'Mot de passe incorrect';
      errorDisplay.style.display = 'flex';
      
      // Animation shake sur le formulaire
      form.style.animation = 'shake 0.5s ease-in-out';
      
      // R√©initialiser l'animation
      setTimeout(() => {
        form.style.animation = '';
      }, 500);
      
      // Cacher l'erreur apr√®s 3 secondes
      setTimeout(() => {
        errorDisplay.style.display = 'none';
      }, 3000);
    }
  });
  
  // Animations d'entr√©e √©chelonn√©es
  setTimeout(() => {
    const elements = document.querySelectorAll('.login-card > *');
    elements.forEach((el, index) => {
      el.style.opacity = '0';
      el.style.transform = 'translateY(20px)';
      el.style.transition = 'all 0.6s ease';
      
      setTimeout(() => {
        el.style.opacity = '1';
        el.style.transform = 'translateY(0)';
      }, 200 + (index * 100));
    });
  }, 600);
});

// Ajouter les styles pour l'animation shake
const style = document.createElement('style');
style.textContent = `
  @keyframes shake {
    0%, 20%, 40%, 60%, 80% {
      transform: translateX(0);
    }
    10%, 30%, 50%, 70%, 90% {
      transform: translateX(-5px);
    }
  }
`;
document.head.appendChild(style);
</script>

</BaseLayout>
