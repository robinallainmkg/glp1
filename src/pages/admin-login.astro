<script>
<script>
// Authentification simple et fonctionnalit√©s modernes
document.addEventListener('DOMContentLoaded', function() {
  const form = document.getElementById('loginForm');
  const passwordInput = document.getElementById('password');
  const togglePassword = document.getElementById('togglePassword');
  const errorDisplay = document.getElementById('errorDisplay');
  const errorText = document.getElementById('errorText');
  
  // V√©rifier si l'utilisateur est d√©j√† connect√©
  const isAuthenticated = localStorage.getItem('admin_session') === 'authenticated';
  
  if (isAuthenticated) {
    window.location.href = '/admin/';
    return;
  }
  
  // Mot de passe correct (en production, utiliser une authentification s√©curis√©e)
  const correctPassword = 'glp1admin2024';
  
  // Toggle de visibilit√© du mot de passe
  togglePassword?.addEventListener('click', function() {
    const type = passwordInput.type === 'password' ? 'text' : 'password';
    passwordInput.type = type;
    togglePassword.textContent = type === 'password' ? 'üëÅÔ∏è' : 'üôà';
  });
  
  // Soumission du formulaire
  form?.addEventListener('submit', function(e) {
    e.preventDefault();
    
    const password = passwordInput.value;
    
    if (password === correctPassword) {
      // Authentification r√©ussie
      localStorage.setItem('admin_session', 'authenticated');
      localStorage.setItem('admin_login_time', new Date().getTime().toString());
      
      // Animation de succ√®s
      const loginBtn = form.querySelector('.login-btn');
      loginBtn.innerHTML = '<span class="btn-icon">‚úÖ</span> Connexion r√©ussie...';
      loginBtn.style.background = 'linear-gradient(135deg, #22c55e, #16a34a)';
      
      // Redirection avec d√©lai
      setTimeout(() => {
        window.location.href = '/admin/';
      }, 1000);
    } else {
      // Erreur d'authentification
      errorText.textContent = 'Mot de passe incorrect';
      errorDisplay.style.display = 'flex';
      
      // Animation de secousse
      const loginCard = document.querySelector('.login-card');
      loginCard.style.animation = 'shake 0.5s ease-in-out';
      setTimeout(() => {
        loginCard.style.animation = 'slideInUp 0.6s ease-out';
      }, 500);
      
      // Focus sur le champ
      passwordInput.value = '';
      passwordInput.focus();
    }
  });
  
  // Masquer l'erreur quand l'utilisateur tape
  passwordInput.addEventListener('input', function() {
    errorDisplay.style.display = 'none';
  });
  
  // Animations d'entr√©e pour les √©l√©ments
  setTimeout(() => {
    const elements = document.querySelectorAll('.form-group, .login-btn');
    elements.forEach((el, index) => {
      el.style.opacity = '0';
      el.style.transform = 'translateY(20px)';
      el.style.transition = 'all 0.4s ease';
      
      setTimeout(() => {
        el.style.opacity = '1';
        el.style.transform = 'translateY(0)';
      }, 200 + (index * 100));
    });
  }, 600);
});

// Animation de secousse pour les erreurs
const style = document.createElement('style');
style.textContent = `
  @keyframes shake {
    0%, 20%, 40%, 60%, 80% {
      transform: translateX(0);
    }
    10%, 30%, 50%, 70%, 90% {
      transform: translateX(-5px);
    }
  }
`;
document.head.appendChild(style);
</script>
</script>

