    url: null,
    icon: 'üìñ'
  });
  
  return breadcrumb;
}

// Fonction pour obtenir l'URL de retour correcte
function getBackUrl(category) {
  // Maintenant on a directement le nom de la collection
  if (categoryMapping[category]) {
    return categoryMapping[category].url;
  }
  
  // Fallback simple
  return `/${category}/`;
}

// Fonction pour obtenir le nom affich√© de la collection  
function getDisplayName(category) {
  if (categoryMapping[category]) {
    return categoryMapping[category].name;
  }
  
  // Fallback: formatter la cat√©gorie
  return category.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase());
}

const breadcrumb = generateBreadcrumb(category, title);
const backUrl = getBackUrl(category);
const displayName = getDisplayName(category);

// Convertir le contenu markdown en HTML et ins√©rer le produit affili√© intelligemment
function markdownToHtml(markdown: string, shouldInsertAffiliate: boolean = false): string {
  let html = markdown
    .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
    .replace(/\*(.*?)\*/g, '<em>$1</em>')
    .replace(/^## (.*$)/gm, '<h2>$1</h2>')
    .replace(/^### (.*$)/gm, '<h3>$1</h3>')
    .replace(/^#### (.*$)/gm, '<h4>$1</h4>')
    .replace(/^\- (.*$)/gm, '<li>$1</li>')
    .replace(/(<li>.*<\/li>)/gs, '<ul>$1</ul>')
    .replace(/\[affiliate-box\]/g, '<div class="affiliate-box">Contenu partenaire</div>')
    .replace(/\r?\n\r?\n/g, '</p><p>')
    .replace(/^(?!<[h|u|l])/gm, '<p>')
    .replace(/(?<!>)$/gm, '</p>')
    .replace(/<p><\/p>/g, '')
    .replace(/<p>(<[h|u])/g, '$1')
    .replace(/(<\/[h|u][^>]*>)<\/p>/g, '$1');
  
  // Ins√©rer le marqueur d'affiliation apr√®s le 2√®me paragraphe si pertinent
  if (shouldInsertAffiliate) {
    const affiliateKeywords = ['peau', 'poitrine', 'raffermissement', 'fermet√©', '√©lasticit√©', 'rel√¢chement', 'beaut√©', 'soin', 'corps', 'perte de poids', 'seins', 'd√©collet√©'];
    const firstPart = html.substring(0, 500); // Analyser les 500 premiers caract√®res
    
    const isRelevant = affiliateKeywords.some(keyword => 
      firstPart.toLowerCase().includes(keyword.toLowerCase())
    );
    
    if (isRelevant) {
      // Chercher le 2√®me </p> pour ins√©rer apr√®s
      let pCount = 0;
      let insertIndex = -1;
      
      for (let i = 0; i < html.length - 4; i++) {
        if (html.substring(i, i + 4) === '</p>') {
          pCount++;
          if (pCount === 2) {
            insertIndex = i + 4;
            break;
          }
        }
      }
      
      if (insertIndex > 0) {
        const affiliateMarker = '\n\n[AFFILIATE_INSERT_HERE]\n\n';
        html = html.substring(0, insertIndex) + affiliateMarker + html.substring(insertIndex);
      }
    }
  }
  
  return html;
}

// === SYST√àME DE PLACEMENT INTELLIGENT AM√âLIOR√â POUR MARKDOWN ===

// Fonctions pour le d√©coupage intelligent du contenu markdown
function splitMarkdownIntoParagraphs(markdownContent) {
  // Divise le contenu markdown en segments (titres et paragraphes)
  const lines = markdownContent.split('\n');
  const segments = [];
  let currentSegment = '';
  let paragraphCount = 0;
  
  for (const line of lines) {
    // Si c'est un titre (## ou ###)
    if (line.match(/^#{2,3}\s+/)) {
      if (currentSegment.trim()) {
        segments.push({ type: 'paragraph', content: currentSegment.trim(), count: paragraphCount });
        paragraphCount++;
        currentSegment = '';
      }
      segments.push({ type: 'heading', content: line, count: paragraphCount });
    }
    // Si c'est une ligne vide, on termine le paragraphe
    else if (line.trim() === '' && currentSegment.trim()) {
      segments.push({ type: 'paragraph', content: currentSegment.trim(), count: paragraphCount });
      paragraphCount++;
      currentSegment = '';
    }
    // Sinon on accumule le contenu
    else if (line.trim()) {
      currentSegment += line + '\n';
    }
  }
  
  // Ajouter le dernier segment s'il existe
  if (currentSegment.trim()) {
    segments.push({ type: 'paragraph', content: currentSegment.trim(), count: paragraphCount });
  }
  
  return segments;
}

function findOptimalInsertionPoint(segments) {
  let paragraphCount = 0;
  
  for (let i = 0; i < segments.length; i++) {
    const segment = segments[i];
    
    // Compter seulement les paragraphes de contenu (pas les titres)
    if (segment.type === 'paragraph') {
      paragraphCount++;
      
      // Ins√©rer apr√®s 2 paragraphes de contenu
      if (paragraphCount >= 2) {
        return i + 1;
      }
    }
  }
  
  // Fallback : au milieu du contenu
  return Math.floor(segments.length / 2);
}

// R√©cup√©ration des produits affili√©s pertinents en premier
const context = {
  category,
  keywords: Array.isArray(keywords) ? keywords : keywords.split(',').map(k => k.trim()),
  tags: [category, collectionTheme]
};

const affiliateProducts = await getProductsForCollection(category, 2);
const keywordProducts = await getProductsByKeywords(context.keywords, category, 1);
const topProduct = affiliateProducts[0] || keywordProducts[0];
const bottomProduct = affiliateProducts[1] || keywordProducts[1] || affiliateProducts[0];

// Application du nouveau syst√®me pour markdown
const segments = splitMarkdownIntoParagraphs(content);
const insertionPoint = segments.length >= 4 ? findOptimalInsertionPoint(segments) : -1;

let beforeAffiliateContent = '';
let afterAffiliateContent = '';
let shouldInsertAffiliate = false;

if (insertionPoint > 0 && topProduct) {
  // Reconstituer le markdown avant et apr√®s l'insertion
  const beforeSegments = segments.slice(0, insertionPoint);
  const afterSegments = segments.slice(insertionPoint);
  
  beforeAffiliateContent = beforeSegments.map(s => s.content).join('\n\n');
  afterAffiliateContent = afterSegments.map(s => s.content).join('\n\n');
  shouldInsertAffiliate = true;
} else {
  // Contenu trop court ou pas de produit, utiliser tout le contenu
  beforeAffiliateContent = content;
  shouldInsertAffiliate = false;
}

// Conversion en HTML des parties
const beforeHtml = markdownToHtml(beforeAffiliateContent, false);
const afterHtml = shouldInsertAffiliate ? markdownToHtml(afterAffiliateContent, false) : '';
const fullHtml = shouldInsertAffiliate ? '' : markdownToHtml(content, false);
