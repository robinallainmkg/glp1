---
export interface Props {
  title: string;
  currentPage?: string;
}

const { title, currentPage = '' } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      background: #f8fafc;
      color: #1a202c;
      line-height: 1.6;
    }

    .admin-layout {
      display: flex;
      min-height: 100vh;
    }

    .admin-sidebar {
      width: 250px;
      background: #2d3748;
      color: white;
      padding: 20px 0;
      position: fixed;
      height: 100vh;
      overflow-y: auto;
    }

    .admin-logo {
      padding: 0 20px 20px 20px;
      border-bottom: 1px solid #4a5568;
      margin-bottom: 20px;
    }

    .admin-logo h1 {
      font-size: 1.5rem;
      font-weight: 700;
      color: #f7fafc;
    }

    .admin-nav {
      list-style: none;
      padding: 0;
    }

    .admin-nav li {
      margin: 4px 0;
    }

    .admin-nav a {
      display: flex;
      align-items: center;
      padding: 12px 20px;
      color: #e2e8f0;
      text-decoration: none;
      transition: all 0.2s;
      border-left: 3px solid transparent;
    }

    .admin-nav a:hover {
      background: #4a5568;
      color: white;
    }

    .admin-nav a.active {
      background: #4a5568;
      color: white;
      border-left-color: #667eea;
    }

    .admin-nav .nav-icon {
      margin-right: 12px;
      font-size: 1.1rem;
    }

    .admin-main {
      flex: 1;
      margin-left: 250px;
      padding: 0;
      background: #f8fafc;
    }

    .admin-topbar {
      background: white;
      padding: 16px 24px;
      border-bottom: 1px solid #e2e8f0;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .admin-user {
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .admin-avatar {
      width: 40px;
      height: 40px;
      background: #667eea;
      color: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 600;
    }

    .admin-content {
      padding: 24px;
      min-height: calc(100vh - 80px);
    }

    @media (max-width: 768px) {
      .admin-sidebar {
        transform: translateX(-100%);
        transition: transform 0.3s;
        z-index: 1000;
      }

      .admin-sidebar.open {
        transform: translateX(0);
      }

      .admin-main {
        margin-left: 0;
      }

      .mobile-menu-btn {
        display: block;
        background: #667eea;
        color: white;
        border: none;
        padding: 8px 12px;
        border-radius: 6px;
        cursor: pointer;
      }
    }

    .mobile-menu-btn {
      display: none;
    }
  </style>
</head>
<body>
  <div class="admin-layout">
    <aside class="admin-sidebar" id="admin-sidebar">
      <div class="admin-logo">
        <h1>üè• GLP-1 Admin</h1>
      </div>
      
      <nav>
        <ul class="admin-nav">
          <li>
            <a href="/admin/" class={`nav-link ${currentPath === '/admin/' || currentPath === '/admin' ? 'active' : ''}`}>
              <span class="nav-icon">üè†</span>
              Admin
            </a>
          </li>
          <li>
            <a href="/admin/user-data/" class={`nav-link ${currentPath.includes('/admin/user-data') ? 'active' : ''}`}>
              <span class="nav-icon">üë•</span>
              Utilisateurs
            </a>
          </li>
          <li>
            <a href="/admin/affiliate/" class={`nav-link ${currentPath.includes('/admin/affiliate') ? 'active' : ''}`}>
              <span class="nav-icon">üè∑Ô∏è</span>
              Affiliation
            </a>
          </li>
        </ul>
      </nav>
    </aside>

    <main class="admin-main">
      <div class="admin-topbar">
        <button class="mobile-menu-btn" onclick="toggleMobileMenu()">
          ‚ò∞ Menu
        </button>
        
        <div class="admin-user">
          <div class="admin-avatar">A</div>
          <div>
            <div style="font-weight: 500;">Admin</div>
            <div style="font-size: 0.875rem; color: #6b7280;">GLP-1 France</div>
          </div>
        </div>
      </div>

      <div class="admin-content">
        <slot />
      </div>
    </main>
  </div>

  <script>
    function toggleMobileMenu() {
      const sidebar = document.getElementById('admin-sidebar');
      sidebar?.classList.toggle('open');
    }

    // Close mobile menu when clicking outside
    document.addEventListener('click', (e) => {
      const sidebar = document.getElementById('admin-sidebar');
      const menuBtn = document.querySelector('.mobile-menu-btn');
      
      if (sidebar && !sidebar.contains(e.target) && !menuBtn?.contains(e.target)) {
        sidebar.classList.remove('open');
      }
    });
  </script>
</body>
</html>
