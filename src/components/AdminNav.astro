---
const currentPath = Astro.url.pathname;
---

<nav class="admin-nav bg-white shadow-md mb-8">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <!-- Logo Admin -->
      <div class="flex items-center">
        <h1 class="text-xl font-bold text-gray-800">🛠️ Admin GLP-1</h1>
      </div>
      
      <!-- Navigation Links -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-4">
          <a 
            href="/admin-dashboard/" 
            class={`px-3 py-2 rounded-md text-sm font-medium transition-colors ${
              currentPath.includes('admin-dashboard') 
                ? 'bg-blue-600 text-white' 
                : 'text-gray-600 hover:bg-gray-100 hover:text-gray-900'
            }`}
          >
            📊 Dashboard
          </a>
          
          <a 
            href="/admin-user-data/" 
            class={`px-3 py-2 rounded-md text-sm font-medium transition-colors ${
              currentPath.includes('admin-user-data') 
                ? 'bg-blue-600 text-white' 
                : 'text-gray-600 hover:bg-gray-100 hover:text-gray-900'
            }`}
          >
            👥 Données Utilisateurs
          </a>
          
          <a 
            href="/admin-affiliation/" 
            class={`px-3 py-2 rounded-md text-sm font-medium transition-colors ${
              currentPath.includes('admin-affiliation') 
                ? 'bg-blue-600 text-white' 
                : 'text-gray-600 hover:bg-gray-100 hover:text-gray-900'
            }`}
          >
            💰 Affiliation
          </a>
          
          <a 
            href="/admin-stats/" 
            class={`px-3 py-2 rounded-md text-sm font-medium transition-colors ${
              currentPath.includes('admin-stats') 
                ? 'bg-blue-600 text-white' 
                : 'text-gray-600 hover:bg-gray-100 hover:text-gray-900'
            }`}
          >
            📈 Statistiques
          </a>
          
          <a 
            href="/" 
            class="px-3 py-2 rounded-md text-sm font-medium text-gray-600 hover:bg-gray-100 hover:text-gray-900"
          >
            🏠 Site
          </a>
        </div>
      </div>
      
      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button 
          type="button" 
          class="mobile-menu-button p-2 rounded-md text-gray-600 hover:text-gray-900 hover:bg-gray-100"
          aria-expanded="false"
        >
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
    
    <!-- Mobile menu -->
    <div class="mobile-menu hidden md:hidden">
      <div class="px-2 pt-2 pb-3 space-y-1">
        <a 
          href="/admin-dashboard/" 
          class={`block px-3 py-2 rounded-md text-base font-medium transition-colors ${
            currentPath.includes('admin-dashboard') 
              ? 'bg-blue-600 text-white' 
              : 'text-gray-600 hover:bg-gray-100 hover:text-gray-900'
          }`}
        >
          📊 Dashboard
        </a>
        
        <a 
          href="/admin-user-data/" 
          class={`block px-3 py-2 rounded-md text-base font-medium transition-colors ${
            currentPath.includes('admin-user-data') 
              ? 'bg-blue-600 text-white' 
              : 'text-gray-600 hover:bg-gray-100 hover:text-gray-900'
          }`}
        >
          👥 Données Utilisateurs
        </a>
        
        <a 
          href="/admin-affiliation/" 
          class={`block px-3 py-2 rounded-md text-base font-medium transition-colors ${
            currentPath.includes('admin-affiliation') 
              ? 'bg-blue-600 text-white' 
              : 'text-gray-600 hover:bg-gray-100 hover:text-gray-900'
          }`}
        >
          💰 Affiliation
        </a>
        
        <a 
          href="/admin-stats/" 
          class={`block px-3 py-2 rounded-md text-base font-medium transition-colors ${
            currentPath.includes('admin-stats') 
              ? 'bg-blue-600 text-white' 
              : 'text-gray-600 hover:bg-gray-100 hover:text-gray-900'
          }`}
        >
          📈 Statistiques
        </a>
        
        <a 
          href="/" 
          class="block px-3 py-2 rounded-md text-base font-medium text-gray-600 hover:bg-gray-100 hover:text-gray-900"
        >
          🏠 Site
        </a>
      </div>
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.querySelector('.mobile-menu-button');
  const mobileMenu = document.querySelector('.mobile-menu');
  
  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>

<style>
  .admin-nav {
    border-bottom: 1px solid #e5e7eb;
  }
  
  .transition-colors {
    transition: all 0.2s ease;
  }
</style>
